<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-primary flex-column">

        <a class="navbar-brand" href="#">
            <h1>HỆ THỐNG QUẢN LÍ</h1>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" href="#">
                    <button type="button" class="btn btn-light">Trang chủ</button>
                </a>
                <a class="nav-link" href="#">
                    <button type="button" class="btn btn-light">Khu vực</button>
                </a>
                <a class="nav-link" href="#">
                    <button type="button" class="btn btn-light">Khách Hàng</button>
                </a>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="bg-primary fixed-bottom">
        <h1 class="text-center">Khach hang</h1>
    </footer>
</body>
</html>
